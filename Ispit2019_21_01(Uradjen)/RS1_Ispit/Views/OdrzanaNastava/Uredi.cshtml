@model RS1_Ispit_asp.net_core.ViewModels.NastavaUrediVM

@{
    ViewData["Title"] = "Uredi";
}

<h2>Uredi maturski ispit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="MaturskiIspitID" hidden="hidden" />
            </div>
            <div class="form-group">
                <h4>Datum: @Model.Datum</h4>
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Predmet: @Model.Predmet</h4>
                <span asp-validation-for="Predmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Napomena" class="control-label"></label>
                <input asp-for="Napomena" class="form-control" />
                <span asp-validation-for="Napomena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div id="ajaxDiv">

</div>

<script>
    $(document).ready(function () {
        $.get("/OdrzanaNastava/UrediPV?id=@Model.MaturskiIspitID", function (data, status) {
            $("#ajaxDiv").html(data);
        });
    });
</script>

