@model RS1_Ispit_asp.net_core.ViewModels.PopravniIspitDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj popravni ispit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="PredajePredmetID" hidden="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ClanKomisije1ID" class="control-label"></label>
                <select asp-for="ClanKomisije1ID" asp-items="Model.ClanKomisije1"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClanKomisije2ID" class="control-label"></label>
                <select asp-for="ClanKomisije2ID" asp-items="Model.ClanKomisije2"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClanKomisije3ID" class="control-label"></label>
                <select asp-for="ClanKomisije3ID" asp-items="Model.ClanKomisije3"></select>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Skola: @Model.Skola</h4>
                <span asp-validation-for="Skola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Skola: @Model.SkolskaGodina</h4>
                <span asp-validation-for="SkolskaGodina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Skola: @Model.Predmet</h4>
                <span asp-validation-for="Predmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

