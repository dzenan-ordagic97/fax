@model RS1_Ispit_asp.net_core.ViewModels.UputnicaDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj novu uputnicu</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LjekarID" class="control-label"></label>
                <select asp-for="LjekarID" asp-items="Model.Ljekari"></select>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacijentID" class="control-label"></label>
                <select asp-for="PacijentID" asp-items="Model.Pacijenti"></select>
            </div>
            <div class="form-group">
                <label asp-for="VrstaPretrageID" class="control-label"></label>
                <select asp-for="VrstaPretrageID" asp-items="Model.VrstaPretraga"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

