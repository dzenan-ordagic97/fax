@model Ispit_2017_02_15.ViewModels.CasEditVM

@{
    ViewData["Title"] = "Edit";
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<h2>Edit cas</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="CasID" hidden="hidden" />
            </div>
            <div class="form-group">
                <h4>Nastavnik: @Model.Nastavnik</h4>
                <span asp-validation-for="Nastavnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h2>Akademska/Predmet: @Model.AkademskaPredmet</h2>
                <span asp-validation-for="AkademskaPredmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div id="divTabela">

</div>
<script>
    $(document).ready(function () {
        $.get("/Cas/EditPV?id=@Model.CasID", function (data, status) {
            $("#divTabela").html(data);
        });
    });
</script>