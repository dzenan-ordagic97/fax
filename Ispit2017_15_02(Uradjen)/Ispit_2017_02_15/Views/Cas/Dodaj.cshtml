@model Ispit_2017_02_15.ViewModels.CasDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4>Nastavnik: @Model.Nastavnik</h4>
                <span asp-validation-for="Nastavnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Akademska" class="control-label"></label>
                <select asp-for="Akademska" asp-items="@Model.AkademskaPredmet"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

