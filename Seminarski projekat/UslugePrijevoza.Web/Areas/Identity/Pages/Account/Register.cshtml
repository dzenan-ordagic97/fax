@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<br />
<div class="container pt-sm-4">
    <div class="row justify-content-center align-items-center ">
        <div class="col-md-7 col-xl-7 card shadow   bg-white rounded" style="padding:50px">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div style="text-align:center;">
                    <h1>
                        <div class="icon icon-shape bg-gradient-primary rounded-circle text-white">
                            <i class="ni ni-badge"></i>
                        </div>
                        @ViewData["Title"]
                    </h1>
                </div>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <i class="ni ni-single-02"></i>
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <i class="ni ni-single-02"></i>
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <i class="ni ni-email-83"></i>
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="ni ni-key-25"></i>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="ni ni-key-25"></i>
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="radio-inline ml-5"><input type="radio" class="usrRadio" name="optuser" value="0" />Klijent</label>
                    <label class="radio-inline float-right mr-5"><input class="usrRadio" type="radio" name="optuser" value="1" />Prijevoznik</label> <br />
                </div>
                <div id="root">

                </div>

            </form>
        </div>
    </div>
</div>
<script>
    $('.usrRadio').click(function () {

        $.ajax({
            url: "/Ajax/GetFormaPV?id=" + this.value

        }).done(function (data) {
            $("#root").html(data);
        });
    });


</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
