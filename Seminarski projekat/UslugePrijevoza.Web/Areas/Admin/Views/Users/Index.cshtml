@model UsersVM
@{
    ViewData["Title"] = "Index";

}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/js/ajax.js"></script>

<div class="col-md-12">
    <div class="row ustify-content-center align-items-center ">
        <div class="col-md-12 card card-plain">
            <div class="card-header card-header-info">
                <h4 class="card-title mt-0 primary2">  Detalji usera </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="stil">
                        <thead class="">
                            <tr>
                                <th class="primary2">Username</th>
                                <th class="primary2">Ime</th>
                                <th class="primary2">Prezime</th>
                                <th class="primary2">Datum rodjenja</th>
                                <th class="primary2">JMBG</th>
                                <th class="primary2">Spol</th>
                                <th class="primary2">Tip usera</th>
                                <th class="primary2">Mogućnost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.userRow)
                            {
                            <tr>
                                <td>@item.Username </td>
                                <td>@item.Ime </td>
                                <td>@item.Prezime </td>
                                <td>@item.DatumRodjenja  </td>
                                <td>@item.JMBG  </td>
                                <td>@item.Spol  </td>
                                <td>
                                    @if (item.TipUsera == "1")
                                    {
                                        <span>Prijevoznik</span>
                                    }
                                    @if (item.TipUsera == "2")
                                    {
                                        <span>Klijent</span>
                                    }
                                    @if (item.TipUsera == "3")
                                    {
                                        <span>Administrator</span>
                                    }
                                </td>
                                @if (item.UserID == 1)
                                {
                                    <td>
                                        <span style="color:red;">Can't delete!</span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a asp-controller="Users" asp-action="Obrisi" asp-route-id="@item.UserID" class="btn btn-outline-danger align-middle w-100 " style="color:white;margin-top:5px"> <i class="fas fa-trash fa-sm text-black-50"></i></a>
                                    </td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
