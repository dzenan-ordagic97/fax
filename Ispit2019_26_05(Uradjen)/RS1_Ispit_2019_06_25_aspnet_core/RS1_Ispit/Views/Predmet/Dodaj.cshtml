@model RS1_Ispit_asp.net_core.ViewModels.PredmetDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj ispit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="AngazovanID" hidden="hidden"/>
            </div>
            <div class="form-group">
                <h4>Predmet: @Model.Predmet</h4>
                <span asp-validation-for="Predmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Nastavnik: @Model.Nastavnik</h4>
                <span asp-validation-for="Nastavnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Skolska godina: @Model.AkademskaGodina</h4>
                <span asp-validation-for="AkademskaGodina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Napomena" class="control-label"></label>
                <input asp-for="Napomena" class="form-control" />
                <span asp-validation-for="Napomena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

